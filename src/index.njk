layout: "layouts/simple.njk"
title: "Home"
tags: nav
eleventyNavigation:
  key: HOME
  order: 1
---

{% set author = author[0] %}

<section class="ftco-section-no-padding bg-light">
	<div class="hero-wrap">
		<div class="overlay"></div>
		<div class="d-flex align-items-center js-fullheight">
			<div class="author-image text img d-flex">
				<section class="home-slider js-fullheight owl-carousel">
					<div class="slider-item js-fullheight" style="background-image:url(/images/author-1.jpg);"></div>
					<div class="slider-item js-fullheight" style="background-image: url({{ author.image }});"></div>
					<div class="slider-item js-fullheight" style="background-image:url(/images/author-3.jpg);"></div> 
				</section>
			</div>
			<div class="author-info text p-3 p-md-5">
				<div class="desc">
					<span class="subheading">Hello! I'm</span>
					<h1 class="big-letter">{{ author.subtitle }}</h1>
					<h1 class="mb-4">
						<span>{{ author.name | truncate(6, true, ',') }}</span> A Photographer. <span>I Capture Life</span></h1>
					<p class="mb-4">
						{{ author.bio | markdownify | safe }}
					</p>

					<h3 class="signature h1">{{ author.name }}</h3>
					<ul class="ftco-social mt-3">
						<li class="ftco-animate">
							<a href="{{ author.eyeem }}" target="_blank">
								<span class="icon-eyeem"><img src='/images/eyeem.svg' style="width:40px"></span></a>
						</li>
						<li class="ftco-animate">
							<a href="{{ author.facebook }}" target="_blank">
								<span class="icon-facebook"></span></a>
						</li>
						<li class="ftco-animate">
							<a href="{{ author.instagram }}" target="_blank">
								<span class="icon-instagram"></span></a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</section>
<section class="ftco-section instagram">
	<div class="container">
		<div class="row justify-content-center mb-2 pb-3">
			<div class="col-md-7 heading-section heading-section-2 text-center ftco-animate">
				<h2 class="mb-4">Follow me on <a href="{{ author.instagram }}" target="_blank">Instagram</a>
				</h2>
			</div>
		</div>

		<div class="row no-gutters">
			{% for shortcode in instaPics %}
				<div class="col-6 col-md ftco-animate">
					<a href="https://www.instagram.com/p/{{ shortcode }}" target="_blank" class="insta-img" style="background-image: url('https://www.instagram.com/p/{{ shortcode }}/media/');">
						<div class="icon d-flex justify-content-center">
							<span class="icon-instagram align-self-center"></span>
						</div>
					</a>
				</div>
			{% endfor %}
		</div>
	</div>
</section>